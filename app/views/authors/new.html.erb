<div class="col-md-6 col-md-offset-3">
	<div class="new-book-form">
		<h1>New Author</h1>

		<%= simple_form_for([@author]) do |f| %>
			<% if @author.errors.any? %>
				<h2>Errors:</h2>
				<ul>
					<% @author.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			<% end %>
			<%= f.input :name %>
			<%= f.button :submit, :class => "btn-custom2" %>
		<% end %>
	</div>
</div>